<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.activities.fragments.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="0"
                    android:layout_marginLeft="8dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="64dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:padding="4dp"
                        app:cardBackgroundColor="@color/dark"
                        app:cardCornerRadius="64dp">
                        <ImageView
                            android:id="@+id/user_picture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="32dp">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>


                    <TextView
                        android:id="@+id/user_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="132dp"
                android:layout_height="46dp"
                android:background="@color/dark"
                android:elevation="16dp"
                android:text="Edit Profile"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:elevation="16dp"
                android:background="@color/darkBlue">

                <LinearLayout
                    android:id="@+id/btn_doctors_consulted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/dark"
                    android:padding="16dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@mipmap/ic_doctor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Doctors consulted"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_weight="0"
                        android:src="@mipmap/ic_chevron_right"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_medical_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/dark"
                    android:padding="16dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@mipmap/ic_medical_advice"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medical advice"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_weight="0"
                        android:src="@mipmap/ic_chevron_right"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/dark"
                    android:padding="16dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@mipmap/ic_logout"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Log Out"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_weight="0"
                        android:src="@mipmap/ic_chevron_right"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</FrameLayout>