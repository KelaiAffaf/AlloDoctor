<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.e_sant.activities.activities.fragments.SymptoPicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picture"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="please feel free to take a picture for your desease, so we can help you more"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_desease_take_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/dark"
            android:elevation="8dp"
            android:text="take picture"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"

            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/desease_picture"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_edittext"/>

        </FrameLayout>


        <Button
            android:id="@+id/btn_desease_submit"
            style="@style/ButtonCnx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="0"
            android:background="@drawable/cnx_button"
            android:text="Submit"/>

    </LinearLayout>

</FrameLayout>
